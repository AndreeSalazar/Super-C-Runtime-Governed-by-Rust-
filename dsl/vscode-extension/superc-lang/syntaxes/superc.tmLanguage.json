{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "SuperC",
    "scopeName": "source.superc",
    "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#types" },
        { "include": "#blocks" },
        { "include": "#functions" },
        { "include": "#operators" },
        { "include": "#numbers" },
        { "include": "#strings" },
        { "include": "#variables" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.superc",
                    "match": "//.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.superc",
                    "match": "\\b(if|else|for|return|fn)\\b"
                },
                {
                    "name": "keyword.other.superc",
                    "match": "\\b(data|reduce)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.superc",
                    "match": "\\b(i32|i64|f32|f64|bool)\\b"
                }
            ]
        },
        "blocks": {
            "patterns": [
                {
                    "name": "keyword.control.block.superc",
                    "match": "\\b(parallel|seq|gpu|asm)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.builtin.superc",
                    "match": "\\b(print|sqrt|sin|cos|exp|log|max|min)\\b"
                },
                {
                    "name": "entity.name.function.superc",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic.superc",
                    "match": "[+\\-*/%]"
                },
                {
                    "name": "keyword.operator.comparison.superc",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.logical.superc",
                    "match": "(&&|\\|\\||!)"
                },
                {
                    "name": "keyword.operator.assignment.superc",
                    "match": "="
                },
                {
                    "name": "keyword.operator.range.superc",
                    "match": ":"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.superc",
                    "match": "\\b[0-9]+\\.[0-9]+\\b"
                },
                {
                    "name": "constant.numeric.integer.superc",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.superc",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.superc",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.superc",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}
