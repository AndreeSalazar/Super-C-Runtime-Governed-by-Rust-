{
    "name": "superc-lang",
    "displayName": "SuperC Language",
    "description": "Syntax highlighting, IntelliSense, and snippets for SuperC DSL (.sc files)",
    "version": "0.3.0",
    "publisher": "superc",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/superc/superc-lang"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "main": "./extension.js",
    "activationEvents": [
        "onLanguage:superc"
    ],
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "superc",
        "dsl",
        "gpu",
        "cuda",
        "hip",
        "compute"
    ],
    "contributes": {
        "languages": [
            {
                "id": "superc",
                "aliases": ["SuperC", "superc", "SC"],
                "extensions": [".sc"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "superc",
                "scopeName": "source.superc",
                "path": "./syntaxes/superc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "superc",
                "path": "./snippets/superc.json"
            }
        ]
    }
}
